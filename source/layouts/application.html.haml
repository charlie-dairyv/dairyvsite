!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge,chrome=1", http: {equiv: "X-UA-Compatible"}}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %title= current_page.data.title || "DairyV"
    = stylesheet_link_tag "application"

  %body{class: page_classes}
    = partial(:header, :locals => { current_page: current_page.data.title })
    = yield
    = javascript_include_tag "https://code.jquery.com/jquery-2.1.1.min.js", "application"
    = partial :footer
  :scss
    #masthead h1 {
      text-indent: -9999px;
      margin: 0;
    }
    #masthead {
      background-position: 50px 40px, left top;
      background-repeat: no-repeat;
      background-image: url(image_path('sustainable.jpg')), url(image-path('header_logo.png'));
      display: block;
      height: 343px;
    }
